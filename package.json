{
  "name": "microservices-node-demo",
  "private": true,
  "workspaces": [
    "common",
    "services/*"
  ],
  "scripts": {
    "build": "npm -ws run build",
    "dev": "concurrently \"npm -w services/user-service run dev\" \"npm -w services/product-service run dev\" \"npm -w services/order-service run dev\" \"npm -w services/payment-service run dev\" \"npm -w services/notification-service run dev\"",
    "start": "npm -ws run start",
    "prisma:generate": "npm -w services/user-service run prisma:generate && npm -w services/product-service run prisma:generate && npm -w services/order-service run prisma:generate",
    "commit": "bash scripts/commit.sh",
    "push": "git push",
    "lint": "eslint 'services/**/src/**/*.ts' 'common/src/**/*.ts'",
    "lint:fix": "eslint 'services/**/src/**/*.ts' 'common/src/**/*.ts' --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "start:services": "sh scripts/startup.sh",
    "start:services:dev": "sh scripts/startup.sh dev",
    "start:services:dev:debug": "sh scripts/startup.sh dev debug",
    "start:services:prod": "sh scripts/startup.sh prod"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "prisma": "^5.18.0",
    "@prisma/client": "^5.18.0",
    "@types/jsonwebtoken": "^9.0.2"
  }
}
