datasource db { 
    provider = "postgresql" 
    url = env("DATABASE_URL") 
}

generator client { 
    provider = "prisma-client-js" 
}

model Product {
    id String @id @default(cuid())
    name String
    description String?
    priceCents Int
    stock Int @default(0)
    createdAt DateTime @default(now())
}